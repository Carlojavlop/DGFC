<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">DGFCDD</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Inicio
            </NavLink>
        </div>



        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
             
                <span class="oi oi-person" aria-hidden="true"></span> Maestro
            </NavLink>
        </div>





        <div class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata" @onclick="()=>expandSubMenus= !expandSubMenus">
                <span class="oi oi-bookmark" aria-hidden="true"></span> Capacitacion
            </NavLink>
            @if (expandSubMenus)
            {
                <NavLink class="expand-menu" href="Cursos">
                    <span class="oi oi-briefcase" aria-hidden="true"></span> Cursos
                </NavLink>

                <NavLink class="expand-menu" href="Talleres">
                    <span class="oi oi-book" aria-hidden="true"></span> Talleres
                </NavLink>
            }

        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-eye" aria-hidden="true"></span> Encuesta
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool expandSubMenus;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
